{
  "name": "struct-visualizer",
  "displayName": "StructVisualizer",
  "description": "Parse and visualize C struct memory layout with alignment, padding, pointers, and packing control",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other", "Education", "Visualization"],
  "activationEvents": [
    "onCommand:struct-visualizer.open",
    "onCommand:struct-visualizer.visualizeFromEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "struct-visualizer.open",
        "title": "StructVisualizer: Open Memory Layout Viewer"
      },
      {
        "command": "struct-visualizer.visualizeFromEditor",
        "title": "Visualize Struct"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "struct-visualizer.visualizeFromEditor",
          "when": "resourceLangId == c || resourceLangId == cpp",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
     "title": "StructVisualizer",
     "properties": {
       "struct-visualizer.typeResolver.excludePaths": {
         "type": "array",
         "items": { "type": "string" },
         "default": [],
         "description": "File paths or globs to exclude when resolving types (e.g., ['**/build/**', '**/*.bak'])"
       }
     }
    }   
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.0.0"
  }
}